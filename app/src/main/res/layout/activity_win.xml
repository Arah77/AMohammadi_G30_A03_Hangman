<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B8BEF6E6"
    tools:context=".WinActivity">

    <TextView
        android:id="@+id/txtCongrat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Congradulations You Have Finished the Game!"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnLeave"
        android:layout_width="130dp"
        android:layout_height="48dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#147897"
        android:fontFamily="@font/audiowide"
        android:text="Leave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCongrat" />

</androidx.constraintlayout.widget.ConstraintLayout>